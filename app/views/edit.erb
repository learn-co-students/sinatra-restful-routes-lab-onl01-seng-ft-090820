<h2>Edit this recipe</h2>
<form action="/recipes/<%=@recipe.id%>" method=post>
<input type="hidden" id="hidden" name="_method" value="PATCH">
<label for="name">Name: </label>
<input type="text" id="name" name="name" value="<%=@recipe.name%>">
<label for="ingredients">Ingredients:</label>
<input type="text" id="ingredients" name="ingredients" value="<%=@recipe.ingredients%>">
<label for="cook_time">Cook time: </label>
<input type="integer"  id="cook_time" name="cook_time" value="<%=@recipe.cook_time%>">
<input type="submit" id="submit" value="Edit">
</form>